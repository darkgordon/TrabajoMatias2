<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    android:id="@+id/cardviewProdu">

    <ImageView
        android:id="@+id/serie_poster_image_viewb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/productoTitulo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="productoNombre"
        android:layout_gravity="bottom"
        android:background="#eb9e9e9e"
        android:textColor="#f6060a"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/ProductoPrecio_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#eb9e9e9e"
        android:padding="5dp"
        android:text="Precio"
        android:textColor="#5E35B1"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="COMPRAR" />

</LinearLayout>